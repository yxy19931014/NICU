@charset "utf-8";

@import "var";

@import "mixin";

@import "normalize";

@import "adpater";

/*主体容器*/
.observationBox {
    position: relative;
    .listcontainer {
        .vitalBox {
            margin-bottom: 195/100rem;
        }
        .VitalSigns {
            width:100%;
            margin-top: 22/100rem;           
            border-top: 1px solid #bebebe;           
            padding: 0 20/100rem 0 20/100rem;
            background: #fff;
            border-bottom: 1px solid #bebebe;
            ul {
                li {
                    width:100%;
                    height: 88/100rem;
                    background: #fff;
                    border-bottom: 1px solid #bebebe;
                    overflow: hidden;
                    .vitalName {
                        width:30%;
                        height: 88/100rem;
                        float: left;
                        font-size: 28/100rem;
                        color:#333;
                        line-height: 88/100rem;
                    }
                    input {
                        width:70%;
                        height: 86/100rem;
                        font-size: 28/100rem;
                        float: left;
                        text-align: right;
                        border: none;
                        padding: 0;
                        margin-bottom: 0;
                        color:#999;
                    }                
            }
            .lastLi {
                border: none;
            }
            }
        }
        .operBtn {
            width:710/100rem;
            height: 150/100rem;
            margin-left: 20/100rem;
            margin-top: 30/100rem;
            color:#fff;
            font-size: 28/100rem;
            font-weight: bold;
            position: fixed;
            bottom: 0;
            margin-bottom: 20/100rem;
            .import {
            width:710/100rem;
            height: 68/100rem;
            background: @MainColor;
            color:#fff;
            font-size: 28/100rem;
            font-weight: bold;
            
            }
            .import.notActive {
                background: #ccc;
            }
            .submitBtn {
                width:100%;
                margin-top: 15/100rem;
                
                .reset {
                    width: 48%;
                    background: #ccc;
                    height: 68/100rem;
                    float: left;
                }
                .reset.active {
                    background: @MainColor;
                }
                .save {
                    width:48%;
                    height: 68/100rem;
                    background: @MainColor;
                    color:#fff;
                    font-size: 28/100rem;
                    font-weight: bold;
                    float: right;
                }
            }
        }
        
    }
    .listcontainer.hasSave {
        .VitalSigns {
            ul {
                li {
                    input {
                    color:#333;
                }
                input::-webkit-input-placeholder {
                /* placeholder颜色  */
                    color: #333;         }
                }
            .selectItem .selectRight {
                    color:#333;
                }
                }
                
        }
    }
    .mui-popup-text .lose_icon {
        width:80/100rem;
        height: 80/100rem;
        position: absolute;
        left: 0;
        top:50/100rem;
        background: url(../imgs/observation/lose.png)no-repeat center / 80/100rem 80/100rem;
    
    }
    }