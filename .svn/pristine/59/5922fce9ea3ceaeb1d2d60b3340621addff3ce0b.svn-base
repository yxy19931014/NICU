@charset "utf-8";

@import "var";

@import "mixin";

@import "normalize";

@import "adpater";


/*主体容器*/
.selectArea .liCon{
    border-radius: 0 0 10px 10px;
}
   .OperateBox {
    background: #efefef;
    
    .listcontainer {
        padding-bottom: 130/100rem;
        .mouth,.skin,.cannula,.light,.sputum,.other {
            width:100%;   
            .mouthTitle,.skinTitle,.cannulaTitle,.lightTitle,.sputumTitle,.otherTitle{
                width:100%;
                height: 68/100rem;
                line-height: 68/100rem;
                background: #efefef;
                font-size: 28/100rem;
                font-weight: 400;
                padding-left: 20/100rem;
                border-bottom: 1px solid #bebebe;
                }   
                .skinTitle,.cannulaTitle,.lightTitle,.sputumTitle,.otherTitle {
                    border-top: 1px solid #bebebe;
                }    
            ul {
                width: 100%;
                padding: 0 20/100rem 0 20/100rem;
                background: #fff;                                
                li {
                width:100%;
                height: 68/100rem;
                line-height: 68/100rem;
                background: #fff;
                border-bottom: 1px solid #bebebe;                
                span {
                    width:50%;
                    height: 68/100rem;
                    float: left;
                    font-size: 28/100rem;
                    color:#333;
                    line-height: 68/100rem;
                }  
                 select,.num {
                    width:50%;
                    height: 66/100rem;
                    line-height: 66/100rem;
                    font-size: 28/100rem;
                    float: left;
                    border:0;
                    text-align: right;
                    margin-bottom: 0;
                    padding: 0;
                    padding-left: 30%;
                    color:#999;
                 }  
                 .num {
                     width:45%;
                 }
                
                 .selectTime {
                    width:50%;
                    height: 66/100rem;
                    line-height: 66/100rem;
                    font-size: 28/100rem;
                    float: left;
                    border:0;
                    margin-bottom: 0;
                    padding: 0;
                    padding-left: 30%;
                    color:#999;
                 }
                 .unit {
                     width: 5%;
                     padding-right: 20/100rem;
                     color:#999;
                 }
                        
                
            }
             .selectItem {
                
                    span{
                        width:50%;
                        display: inline-block;
                    }
                    .selectRight {
                        text-align: right;
                        padding-right: 20/100rem;
                        color:#999;
                    }
                }
            .lastLi {
                    border-bottom: none;
                }
            }
            .times {
                padding-right: 50/100rem;
                display: flex;
                flex-wrap: wrap;
                position: relative;
                background: #fff;
                .singleTime {
                    width:33.33%;
                    display: inline-block;
                    margin: 0; 
                    height: 50/100rem;
                    line-height: 50/100rem; 
                    border:0;                
                }
                .clearBtn {
                    width: 42/100rem;
                    height: 42/100rem;
                    background: url(../imgs/observation/delete.png)no-repeat center /42/100rem 42/100rem;
                    position: absolute;
                    right: 5/100rem;
                    top:6/100rem;
                }
            }
        }
        
    }
    .listcontainer.hasSave {
        input,select {
            color:@MainColor;
        }
    }
    .listcontainer.hasSave.OtherData {
        input,select {
            color:red;
        }
    }
//  温度部分

    .save {
        width:710/100rem;
        height: 68/100rem;
        background: @MainColor;
        margin-left: 20/100rem;
        margin-top: 40/100rem;
        color:#fff;
        font-size: 28/100rem;
        font-weight: bold;
        position: fixed;
        bottom:0rem;
        margin-bottom: 10/100rem;
    }
}